{
    "name": "work-timer-bomb",
    "version": "1.0.0",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "dist": "electron-builder"
    },
    "build": {
        "appId": "com.yourcompany.worktimerbomb",
        "productName": "Work Timer Bomb",
        "win": {
            "target": "nsis",
